@model Dotcom.ViewModels.NewProductModel
@{
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Market" asp-action="Index">Products</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<form class="border" asp-action="NewProductAdd" asp-controller="Market" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"/>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите название:</label>
            <input type="text" asp-for="Name" autocomplete="off" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Введите цену:</label>
            <input asp-for="Price" autocomplete="off"  />
            <span asp-validation-for="Price" />
        </div>
        <div class="form-group">
            <label asp-for="Quantity">Введите количество:</label>
            <input asp-for="Quantity"  autocomplete="off" />
            <span asp-validation-for="Quantity" />
        </div>
        <div class="form-group ">
            <label asp-for="Description">Введите описание:</label>
            <textarea asp-for="Description" style="resize:none" autocomplete="off" > </textarea>
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

<table class="table table-bordered table-hover" style="width:100%">
    <thead>Ваши товары</thead>
    <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Удалить</th>
    </tr>
    <tbody>
        @foreach (var prod in ViewBag.Products)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td>@prod.Quantity</td>
                <td>
                    @Html.ActionLink(
                        "Удалить",
                        "DeleteProduct",
                        "Market",
                        new { prod.Id },
                        new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
